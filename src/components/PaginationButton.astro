---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props as Props;
---

<div class="flex-1 border border-1 rounded-sm">
  <a href={url}
    ><div class="p-4">
      <p class="text-sm">Download for</p>
      <h5 class="font-bold text-md">{title}</h5>
    </div>
  </a>
</div>
