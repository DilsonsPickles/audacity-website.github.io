---
import PrimaryDownloadButton from "../button/PrimaryDownloadButton";
import Audacity_Logo from "../../assets/img/Audacity_Logo.png";
---

<section>
  <div class="mt-12 mx-auto max-w-md xl:max-w-xl px-3 lg:px-0">
    <div class="pt-24 pb-12 lg:pt-32 lg:pb-24 flex flex-col space-y-16">
      <div class="flex flex-col items-center text-center space-y-4">
        <img class="w-16 xl:w-24" src={Audacity_Logo} />
        <h1 class="text-2xl xl:text-4xl leading-snug font-bold text-gray-800">
          Free, open source, cross-platform audio software
        </h1>
  
      </div>

      <div class="flex flex-col items-center justify-center space-y-8">
        <PrimaryDownloadButton client:only />
        <div class="flex flex-col sm:flex-row sm:divide-x-2">
          <p class="text-gray-600 px-3">Latest version 3.2.4</p><a
            href="https://github.com/audacity/audacity/releases/tag/Audacity-3.2.4"
            target="_blank"
            class="text-gray-600 px-3 underline">Read release notes</a
          >
        </div>
      </div>
    </div>
  </div>
</section>


