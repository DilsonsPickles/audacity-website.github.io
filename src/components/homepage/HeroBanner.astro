---
import DownloadButton from "../button/DownloadButton";
import Audacity_Logo from "../../assets/img/Audacity_Logo.png";
import DownloadMuseHubButton from "../button/DownloadMuseHubButton";
---

<section>
  <div
    class="max-w-screen-sm md:max-w-screen-lg mx-auto py-12 grid grid-cols-12 gap-y-6"
  >
    <div class="flex flex-col gap-2 col-start-2 col-span-10 items-center text-center">
      <img class="w-12 md:w-16 lg:w-24" src={Audacity_Logo} />
      <h1>
        Audacity, the world's most popular audio editing and recording app
      </h1>
    </div>

    <div
      class="col-start-2 col-span-10 flex flex-col gap-2 md:flex-row lg:col-start-3 lg:col-span-8"
    >
      <DownloadButton client:only/>
      <DownloadMuseHubButton client:only />
    </div>
  </div>
</section>
