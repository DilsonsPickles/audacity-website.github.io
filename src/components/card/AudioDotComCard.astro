---
interface Props {
  title: string;
  description: string;
  icon: string;
}
const { title, description, icon } = Astro.props as Props;
---

<div class="h-64
 p-6 flex flex-col justify-between rounded-lg bg-gray-700/75 backdrop-blur-md">
  <span class=`icon icon-medium ${icon} text-white`></span>
  <div>
    <h4 class="text-white">{title}</h4><p class="text-gray-400">
      {description}
    </p>
  </div>
</div>
