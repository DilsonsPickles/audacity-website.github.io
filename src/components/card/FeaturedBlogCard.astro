---
interface Props {
  title: string;
  description: string;
  href: string;
  thumbnail: string;
  author: string;
  date: string;
}
const { title, description, href, thumbnail, author, date } =
  Astro.props as Props;
---

<a href={href}>
  <div
    class="flex flex-col md:flex-row rounded-lg overflow-hidden bg-slate-100 h-full"
  >
    <div class="w-full h-24 md:w-64 md:h-full">
      <img class="w-full h-full object-cover" src={thumbnail} />
    </div>
    <div class="flex flex-1 flex-col p-4 justify-between">
      <div class="flex flex-col gap-2">
        <p class="text-sm md:text-base uppercase font-bold text-gray-600">
          {date}
        </p>
        <h3
          class="hover:text-blue-700 hover:underline font-bold text-gray-800 text-xl md:text-2xl"
        >
          {title}
        </h3><p class="text-base md:text-xl">{description.slice(0, 200)}...</p>
      </div>

      <div class="mt-4 md:mt-0">
        <p class="text-base md:text-xl text-blue-700 underline">Read more</p>
      </div>
    </div>
  </div>
</a>
